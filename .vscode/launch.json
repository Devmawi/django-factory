{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run in Docker",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/app/"
            }],
            "preLaunchTask": "Docker Restart",
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Python: Machine Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "test",
                "machines"
            ],
            "django": true
        }
    ]
}